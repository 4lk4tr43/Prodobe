{
  "manifest_version": 2,
  "minimum_chrome_version": "10.0",

  "name": "Prodobe",
  "description": "Extended developer tools for the Adobe Marketing Cloud.",
  "version": "0.0.1",

  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "devtools_page": "devtools.html"
}